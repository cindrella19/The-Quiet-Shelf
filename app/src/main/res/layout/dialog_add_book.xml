<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F1EB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/inputTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book title"
            android:textSize="16sp"
            android:textColor="#2C2C2C"
            android:textColorHint="#8A8A8A"
            android:padding="14dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputVibe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vibe (2–3 lines, press enter)"
            android:minLines="3"
            android:gravity="top"
            android:textSize="15sp"
            android:textColor="#2C2C2C"
            android:textColorHint="#8A8A8A"
            android:padding="14dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quote (optional)"
            android:textSize="15sp"
            android:textColor="#2C2C2C"
            android:textColorHint="#8A8A8A"
            android:padding="14dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputPages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pages (optional)"
            android:inputType="number"
            android:textSize="15sp"
            android:textColor="#2C2C2C"
            android:textColorHint="#8A8A8A"
            android:padding="14dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- ⭐ Rating -->
        <EditText
            android:id="@+id/inputRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rating (0–10)"
            android:inputType="number"
            android:textSize="15sp"
            android:textColor="#2C2C2C"
            android:textColorHint="#8A8A8A"
            android:padding="14dp"
            android:background="#FFFFFF" />

    </LinearLayout>
</ScrollView>
