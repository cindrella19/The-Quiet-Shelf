<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_paper_flower"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Treasure"
            android:textColor="#5B5248"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_marginBottom="32dp" />

        <!-- Book Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book Name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#5B5248"
            app:hintTextColor="#5B5248"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Vibes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Three Vibes"
            android:textColor="#B79B4A"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <EditText
                android:id="@+id/editVibe1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Vibe 1"
                android:background="@drawable/footer_bg"
                android:padding="12dp"
                android:layout_marginEnd="4dp"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/editVibe2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Vibe 2"
                android:background="@drawable/footer_bg"
                android:padding="12dp"
                android:layout_marginHorizontal="4dp"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/editVibe3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Vibe 3"
                android:background="@drawable/footer_bg"
                android:padding="12dp"
                android:layout_marginStart="4dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Famous Line -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="One Famous Line"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#5B5248"
            app:hintTextColor="#5B5248"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:inputType="textMultiLine"
                android:maxLines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating (1-10)"
            android:textColor="#5B5248"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <SeekBar
            android:id="@+id/ratingSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5"
            android:layout_marginBottom="32dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveBook"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Add to Shelf"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="#5B5248"
            app:cornerRadius="12dp" />

    </LinearLayout>
</ScrollView>